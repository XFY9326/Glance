<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullContent.DayNight" parent="AppTheme.FullContent">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:forceDarkAllowed">false</item>
        <item name="postSplashScreenTheme">@style/AppTheme.FullContent.DayNight</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
    </style>

</resources>